<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="321dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:inputType="text"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/cb_limpieza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_limpieza"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="22dp"
        android:text="Limpieza"
        app:layout_constraintBottom_toTopOf="@+id/cb_endo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <CheckBox
        android:id="@+id/cb_exd"
        android:layout_width="143dp"
        android:layout_height="0dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="26dp"
        android:text="Extracción dental"
        app:layout_constraintBottom_toTopOf="@+id/cb_examen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_endo" />

    <CheckBox
        android:id="@+id/cb_endo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="26dp"
        android:text="Endodoncia"
        app:layout_constraintBottom_toTopOf="@+id/cb_exd"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_limpieza" />

    <CheckBox
        android:id="@+id/cb_examen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="38dp"
        android:text="Examen Rutinario"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardar"
        app:layout_constraintEnd_toEndOf="@+id/cb_exd"
        app:layout_constraintStart_toStartOf="@+id/cb_exd"
        app:layout_constraintTop_toBottomOf="@+id/cb_exd" />

    <Button
        android:id="@+id/btn_volver"
        android:layout_width="134dp"
        android:layout_height="0dp"
        android:layout_marginStart="129dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="78dp"
        android:text="Volver al menú"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cb_examen"
        app:layout_constraintTop_toBottomOf="@+id/btn_guardar" />

    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="148dp"
        android:layout_height="0dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="80dp"
        android:text="Guardar"
        app:layout_constraintBottom_toTopOf="@+id/btn_volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_examen" />


</androidx.constraintlayout.widget.ConstraintLayout>